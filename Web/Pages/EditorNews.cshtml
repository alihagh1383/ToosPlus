@page
@model Web.Pages.EditorNewsModel
@{
    Layout = "_Layout";
}
<link href="~/froala/css/froala_editor.pkgd.min.css" rel="stylesheet" />
<div class="single_post">
    <div class="container-fluid">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="comments_form">
                <form method="post" enctype="multipart/form-data">
                    @(await Html.RenderComponentAsync<UploadFile>(RenderMode.ServerPrerendered, new { 
                        For = $"{nameof(Model.News)}.{nameof(Model.News.TitleImageName)}",
                        FileId = Model.News.TitleImageName }))
                    <div class="col-md-6">
                        <label asp-for="@Model.News.Date"></label>
                        <input asp-for="@Model.News.Date" class="form-control" />
                        <span asp-validation-for="@Model.News.Date"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.News.Category"></label>
                        <select asp-for="@Model.News.Category" class="form-control">
                            @foreach (var item in Model.Categories)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                        <span asp-validation-for="@Model.News.Category"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="@Model.News.Title"></label>
                        <input asp-for="@Model.News.Title" class="form-control" />
                        <span asp-validation-for="@Model.News.Title"></span>
                    </div>
                    <div class="col-md-12 edit">
                        <label asp-for="@Model.News.Content"></label>
                        <textarea asp-for="@Model.News.Content" class="form-control" id="Content"></textarea>
                        <span asp-validation-for="@Model.News.Content"></span>
                    </div>
                    @*    <div class="col-md-12">
                        <input class="form-control" name="formFile" type="file" />
                    </div> *@
                    <div class="col-md-12">
                        <div class="text-left">
                            <button class="btn btn-primary">ثبت</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>

    const editor = new FroalaEditor('#Content');
</script>
<style>
    .edit div {
        margin-bottom: 0;
    }

</style>
<script src="~/_framework/blazor.server.js"></script>
<script src="~/froala/js/froala_editor.pkgd.min.js"></script>